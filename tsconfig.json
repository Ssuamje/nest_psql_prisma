{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "moduleResolution": "node",
    "sourceMap": false,
    "incremental": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"],
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
